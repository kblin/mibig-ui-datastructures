{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$schema_created": "2022-03-08T10:39:03+01:00",
    "$schema_version": "1.0",
    "$id": "https://mibig.secondarymetabolites.org/schemas/locus.json",
    "title": "Locus",
    "description": "Gene cluster sequence information",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "accession": {
            "$ref": "https://mibig.secondarymetabolites.org/schemas/db_xref.json"
        },
        "completeness": {
            "type": "string",
            "enum": [
                "complete",
                "incomplete",
                "unknown"
            ]
        },
        "end_coordinate": {
            "type": "integer"
        },
        "evidences": {
            "items": {                
                "description": "validated on the server side",
                "type": "string"
            },
            "type": "array"
        },
        "mixs_compliant": {
            "type": "boolean"
        },
        "start_coordinate": {
            "type": "integer"
        }
    },
    "required": ["accession", "completeness", "evidences"]
}